{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/cdk",
  "targets": {
    "build": {
      "executor": "@jompx/jcdk:build",
      "options": {
        "script": "build"
      }
    },
    "graphql-schema": {
      "executor": "@jompx/jcdk:graphql-schema",
      "cwd": "apps/cdk",
      "options": {
        "cdkOutSchemaFilePattern": "apps/cdk/cdk.out/assembly-CdkPipelineStack-AppStage/*AppSyncStack*.template.json"
      }
    },
    "synth": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "apps/cdk",
        "commands": [
          {
            "command": "npx aws-cdk synth",
            "forwardAllArgs": true
          }
        ]
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "apps/cdk",
        "commands": [
          {
            "command": "npx aws-cdk deploy --require-approval=never",
            "forwardAllArgs": true
          }
        ]
      }
    },
    "watch": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "apps/cdk",
        "commands": [
          {
            "command": "npx aws-cdk watch",
            "forwardAllArgs": true
          }
        ]
      }
    },
    "destroy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "apps/cdk",
        "commands": [
          {
            "command": "npx aws-cdk destroy",
            "forwardAllArgs": true
          }
        ]
      }
    },
    "list": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "apps/cdk",
        "commands": [
          {
            "command": "npx aws-cdk list",
            "forwardAllArgs": true
          }
        ]
      }
    },
    "login": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "apps/cdk",
        "parallel": false,
        "commands": [
          "aws sso login --profile {args.profile}",
          "npx cdk-sso-sync {args.profile}"
        ]
      }
    },
    "version": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "apps/cdk",
        "commands": [
          {
            "command": "npx aws-cdk version",
            "forwardAllArgs": true
          }
        ]
      }
    }
  }
}
