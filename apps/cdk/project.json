{
  "name": "cdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/cdk",
  "targets": {
    "jbuild": {
      "executor": "@jompx/jcdk:build",
      "options": {
        "script": "build"
      }
    },
    "build": {
      "executor": "nx:run-script",
      "options": {
        "script": "build"
      }
    },
    "graphql-schema": {
      "executor": "@jompx/jcdk:graphql-schema",
      "cwd": "apps/cdk",
      "options": {
        "cdkOutSchemaFilePattern": "apps/cdk/cdk.out/assembly-CdkPipelineStack-AppStage/*AppSyncStack*.template.json",
        "customDirectiveFilePattern": "apps/cdk/tsc.out/apps/cdk/lib/app-sync/directives/!(*.d).js"
      }
    },
    "build-graphql": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "nx run cdk:graphql-schema",
            "forwardAllArgs": false,
            "description": "Create files from AppSync local schema: schema.graphql, schema.graphql.directive.json"
          },
          {
            "command": "npm run codegen",
            "forwardAllArgs": false,
            "description": "Create files from schema.graphql: schema.graphql.json & schema.graphql.types.ts"
          }
        ],
        "parallel": false
      }
    },
    "build-lambda-layer": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "nx build appsync-datasource-layer",
            "forwardAllArgs": false,
            "description": "Use nx to build and transpile typescript npm module."
          },
          {
            "command": "cd dist/libs/appsync-datasource-layer/nodejs/node_modules/@jompx-org/appsync-datasource-layer && npm install",
            "forwardAllArgs": false,
            "description": "Run npm install on the npm module to create the node_modules folder with any npm module dependencies."
          }
        ],
        "parallel": false
      }
    },
    "synth": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/cdk",
        "commands": [
          {
            "command": "npx aws-cdk synth",
            "forwardAllArgs": true
          },
          {
            "command": "nx run cdk:build-graphql",
            "forwardAllArgs": false,
            "description": "Run synth first to get the latest AppSync graphql schema. "
          }
        ],
        "parallel": false
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/cdk",
        "commands": [
          {
            "command": "nx run cdk:build-graphql",
            "forwardAllArgs": false
          },
          {
            "command": "npx aws-cdk deploy",
            "forwardAllArgs": true
          }
        ],
        "parallel": false
      }
    },
    "watch": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/cdk",
        "commands": [
          {
            "command": "npx aws-cdk watch",
            "forwardAllArgs": true
          }
        ]
      }
    },
    "destroy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/cdk",
        "commands": [
          {
            "command": "npx aws-cdk destroy",
            "forwardAllArgs": true
          }
        ]
      }
    },
    "list": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/cdk",
        "commands": [
          {
            "command": "npx aws-cdk list",
            "forwardAllArgs": true
          }
        ]
      }
    },
    "login": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/cdk",
        "parallel": false,
        "commands": [
          "aws sso login --profile {args.profile}",
          "npx cdk-sso-sync {args.profile}"
        ],
        "forwardAllArgs": false
      }
    },
    "version": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/cdk",
        "commands": [
          {
            "command": "npx aws-cdk version",
            "forwardAllArgs": true
          }
        ]
      }
    }
  }
}
